# syntax=docker/dockerfile:1.7

FROM gradle:8.12.1-jdk21 AS builder
WORKDIR /workspace
COPY . .
RUN gradle :backend:app:bootJar --no-daemon

FROM eclipse-temurin:21-jre
WORKDIR /app
COPY --from=builder /workspace/backend/app/build/libs/*.jar /app/app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "/app/app.jar"]
