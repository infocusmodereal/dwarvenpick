[Unit]
Description=badgermole OpenSQL Workbench Backend
After=network.target

[Service]
Type=simple
User=badgermole
Group=badgermole
WorkingDirectory=/opt/badgermole
Environment=SPRING_PROFILES_ACTIVE=prod
EnvironmentFile=-/etc/badgermole/badgermole.env
ExecStart=/usr/bin/java -jar /opt/badgermole/app.jar
Restart=on-failure
RestartSec=5
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
